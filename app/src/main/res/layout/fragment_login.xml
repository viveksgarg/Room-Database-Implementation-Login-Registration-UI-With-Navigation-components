<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bg_gradient"
        tools:context=".LoginUI.LoginFragment"
        android:id="@+id/login"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp" />

        <TextView
            android:id="@+id/tvHello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@string/hello"
            android:textSize="56sp"
            android:layout_gravity="center" />


        <TextView
            android:id="@+id/tvSignInAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sign_in_to_your_account"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_margin="24dp"
            android:layout_marginTop="30dp" />

        <EditText
            android:id="@+id/etLoginEmail"
            android:layout_width="match_parent"
            android:hint="@string/e_mail"
            android:textColorHint="@color/grey"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/ic_email"
            android:layout_height="46dp"
            android:background="@drawable/edittext_registration_screen"
            android:layout_margin="14dp"
            android:elevation="16dp"
            android:paddingLeft="16dp"

            />

        <EditText
            android:id="@+id/etLoginPassword"
            android:layout_width="match_parent"
            android:hint="@string/password"
            android:layout_height="46dp"
            android:textColorHint="@color/grey"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/ic_password"
            android:drawableRight="@drawable/ic_eye"
            android:background="@drawable/edittext_registration_screen"
            android:layout_margin="14dp"
            android:elevation="16dp"
            android:paddingLeft="16dp"
            android:paddingEnd="16dp"

            />

        <TextView
            android:id="@+id/tvForgotYourPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@string/forgot_your_password"
            android:layout_margin="24dp"
            android:layout_gravity="end" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="14dp"
            android:layout_gravity="end">

            <TextView
                android:id="@+id/tvSignin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sign_in"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:textStyle="bold"
                android:padding="8dp"
                android:layout_margin="10dp" />

            <ImageView
                android:id="@+id/ivForwardArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_forward"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:padding="8dp"
                android:background="@drawable/bg_arrow_shape" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvDontHaveAnAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@string/don_t_have_an_account_create"
            android:layout_gravity="center"
            android:layout_margin="24dp"
            android:textSize="20sp" />


    </LinearLayout>
